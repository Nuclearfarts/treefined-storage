{
	"parent": "block/block",
	"multipart": [
		{
			"apply": {
				"model": "${modid}:block/${id}_center",
				"uvlock": true
			}
		},
		{
			"when": {
				"up": "true"
			},
			"apply": {
				"model": "${modid}:block/${id}_connect",
				"uvlock": true
			}
		},
		{
			"when": {
				"down": "true"
			},
			"apply": {
				"model": "${modid}:block/${id}_connect",
				"x": 180,
				"uvlock": true
			}
		},
		{
			"when": {
				"north": "true"
			},
			"apply": {
				"model": "${modid}:block/${id}_connect",
				"x": 90,
				"uvlock": true
			}
		},
		{
			"when": {
				"south": "true"
			},
			"apply": {
				"model": "${modid}:block/${id}_connect",
				"x": 270,
				"uvlock": true
			}
		},
		{
			"when": {
				"east": "true"
			},
			"apply": {
				"model": "${modid}:block/${id}_connect",
				"x": 90,
				"y": 90,
				"uvlock": true
			}
		},
		{
			"when": {
				"west": "true"
			},
			"apply": {
				"model": "${modid}:block/${id}_connect",
				"x": 90,
				"y": 270,
				"uvlock": true
			}
		}
	]
}